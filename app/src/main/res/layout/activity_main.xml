<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:screenOrientation="landscape"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    tools:context="com.easy.barcodereader.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="3dp">

            <EditText
                android:id="@+id/textToSearch"
                android:layout_width="93dp"
                android:layout_height="53dp"
                android:background="@color/black"
                android:gravity="center_vertical"
                android:hint="nome a pesquisar..."
                android:scrollHorizontally="true"
                android:paddingLeft="3sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="13sp"
                android:singleLine="true"
                android:inputType="textNoSuggestions|textUri"
                android:textSize="16dp" >

            </EditText>

            <Button
                android:id="@+id/main_button_Checkin"
                android:layout_width="50dp"
                android:layout_height="80sp"
                android:layout_gravity="center"
                android:layout_marginLeft="30sp"
                android:height="80dp"
                android:text="CheckIn"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:width="120dp" >
            </Button>

            <Button
                android:id="@+id/main_button_Checkout"
                android:layout_width="50dp"
                android:layout_height="80sp"
                android:layout_gravity="center"
                android:height="80dp"
                android:text="CheckOut"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:width="120dp" >
            </Button>

            <Button
                android:id="@+id/main_button_Print"
                android:layout_width="50dp"
                android:layout_height="80sp"
                android:layout_gravity="center"
                android:height="80dp"
                android:text="Print"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:width="120dp" >
            </Button>

            <Button
                android:id="@+id/main_button_Search"
                android:layout_width="50dp"
                android:layout_height="80sp"
                android:layout_gravity="center"
                android:height="80dp"
                android:text="Search"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:width="120dp" >
            </Button>
            <!-- <Button
                android:id="@+id/main_button_Config"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:height="80dp"
                android:layout_marginLeft="20sp"
                android:text="Config"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:width="120dp" >
            </Button> -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="3dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/read_barcode"
                android:id="@+id/read_barcode"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/auto_focus"
                android:id="@+id/auto_focus"
                android:layout_below="@+id/barcode_value"
                android:checked="false" />

            <CheckBox
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:text="@string/use_flash"
                android:id="@+id/use_flash"
                android:layout_alignTop="@+id/auto_focus"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:checked="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="14dp" >
            <Button
                android:id="@+id/main_button_Config"
                android:layout_width="83dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:height="80dp"
                android:layout_marginLeft="0sp"
                android:text="Config"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:width="120dp" >
            </Button>
            <TextView
                android:id="@+id/textWait"
                android:layout_width="30sp"
                android:layout_height="40sp"
                android:layout_marginLeft="5sp"
                android:padding="3sp"
                android:text=" "
                android:textColor="@color/white"
                android:textSize="14sp" >
            </TextView>

            <TextView
                android:id="@+id/userToCheckin"
                android:layout_width="60sp"
                android:layout_height="40sp"
                android:layout_marginLeft="5sp"
                android:padding="3sp"
                android:background="@color/black"
                android:text=" "
                android:textSize="14sp" >

            </TextView>


            <TextView
                android:id="@+id/textName"
                android:layout_width="126dp"
                android:layout_height="40sp"
                android:layout_marginLeft="0sp"
                android:padding="3sp"
                android:background="@color/black"
                android:text=" "
                android:textSize="14sp" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="14dp" >

            <ListView
                android:id="@+id/listview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="74.45"
                android:background="@color/black"
                android:choiceMode="singleChoice"
                android:scrollbars="vertical" >
            </ListView>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
